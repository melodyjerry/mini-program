/* pages/home/home.wxss */
.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #d0d0d0;  
  text-align: center;  
  line-height: 80rpx;
}  
.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 50%;  
  color: #333;  
}  
.on{ color: #ff5777;  
  border-bottom: 5rpx solid #ff5777;
}  
  
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: auto;
} 
.box-content{
  overflow: auto;
  /* background: red; */
} 
.single-person{
  border-bottom: 1rpx solid #eee;
  display: flex;
  width: 92%;
  margin: 0 auto;
  padding: 18rpx 0;
}
.single-person .person-left{
  display: flex;
  flex: 4;
  flex-direction: row;
  justify-content: flex-start;
}
.person-left .person-avatar{
  width: 80rpx;
  height: 80rpx;
  display: block;
  border-radius: 5rpx;
}
.person-left .person-info{
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
  justify-content: flex-start;
}
/* .person-left .person-info-top{
  background: blue;
} */
.person-info-top .info-top-rank{
  font-weight: bolder;
}
.person-info-top .info-top-name{
  color: #ff5777;
}
.person-info-top .infor-top-nickname{
  font-style: italic;
}
.person-left .person-info-bottom{
  /* background: blue; */
  font-size: 22rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.single-person .icon{
  width: 16rpx;
  height: 22rpx;
  display: inline-block;
  background-size: cover;
}
