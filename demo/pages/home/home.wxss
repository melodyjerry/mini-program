.single-person .person-right{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  color: #000;
  font-size: 28rpx;
  /* background: red; */
}
.person-right .icon{
  width: 24rpx;
  height: 24rpx;
}
