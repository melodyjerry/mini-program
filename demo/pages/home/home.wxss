.form-wrapper{
  width: 90%;
  margin: 0 auto;
  margin-top: 60rpx;
}
.name-input{
  /* 弹性布局对input组件的宽度有影响--不能改变宽度值 */
  /* display: flex;
  flex: 1; */
  width: 100%;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
  border: 1rpx solid #ff5777;
  height: 100rpx;
  /* justify-content: center;
  align-items: center; */
  text-align: center;
  font-size: 32rpx;
  color: #ff5777;
}
.confirm-btn{
  height: 100rpx;
  line-height: 100rpx;
  background: #ff5777;
  color: #f8f8f8;
  margin-top: 20rpx;
  border: none;
}
.person-other{
  width: 92%;
  margin: 0 auto;
  font-size: 26rpx;
  color: #333;
  padding: 26rpx;
}
.person-other view{
  line-height: 42rpx;
}